<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activity.RegisterActivity">

        <EditText android:id="@+id/username"
                  android:layout_width="300dp"
                  android:layout_height="60dp"
                  android:background="@drawable/edittext_shape"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="20dp"
                  android:hint="请输入用户名"
                  android:textSize="20dp"/>
        <EditText android:id="@+id/password"
                  android:layout_below="@+id/username"
                  android:layout_width="300dp"
                  android:layout_height="60dp"
                  android:background="@drawable/edittext_shape"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="20dp"
                  android:hint="请输入密码"
                  android:textSize="20dp"/>
        <TextView android:id="@+id/logo"
                  android:visibility="invisible"
                  android:layout_below="@+id/password"
                  android:layout_width="300dp"
                  android:layout_height="60dp"
                  android:background="@drawable/edittext_shape"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="20dp"
                  android:hint="请输入logo"
                  android:textSize="20dp"/>
        <EditText android:id="@+id/gender"
                  android:layout_below="@id/password"
                  android:layout_width="300dp"
                  android:layout_height="60dp"
                  android:background="@drawable/edittext_shape"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="20dp"
                  android:hint="请输入gender"
                  android:textSize="20dp"/>
        <EditText android:id="@+id/tel"
                  android:layout_below="@+id/gender"
                  android:layout_width="300dp"
                  android:layout_height="60dp"
                  android:background="@drawable/edittext_shape"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="20dp"
                  android:hint="请输入tel"
                  android:textSize="20dp"/>
        <TextView
                android:id="@+id/tv_selector_area"
                android:layout_width="300dp"
                android:layout_marginTop="20dp"

                android:layout_height="60dp"
                android:background="@drawable/edittext_shape"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tel"
                android:padding="10dp"
                android:text="选择地区"/>

        <!--    <TextView-->
        <!--            android:id="@+id/showAddr"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_below="@+id/tv_selector_area"-->
        <!--    />-->
        <EditText android:id="@+id/address"

                  android:layout_below="@+id/tv_selector_area"
                  android:layout_width="300dp"
                  android:layout_height="60dp"
                  android:background="@drawable/edittext_shape"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="20dp"
                  android:hint="请输入address"
                  android:textSize="20dp"/>
        <EditText android:id="@+id/postcode"
                  android:layout_below="@+id/address"
                  android:layout_width="300dp"
                  android:layout_height="60dp"
                  android:background="@drawable/edittext_shape"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="20dp"
                  android:hint="请输入postcode"
                  android:textSize="20dp"/>

        <ImageView android:layout_below="@+id/postcode"
                   android:layout_height="300dp"
                   android:layout_width="300dp"
                   android:layout_centerHorizontal="true"
                   android:id="@+id/test_img"/>
        <Button android:id="@+id/btn_choose_img"
                android:text="选择图片"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/test_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

<!--        head pic-->
        <TextView android:id="@+id/head_pic"
                  android:visibility="invisible"
                  android:layout_below="@+id/btn_choose_img"
                  android:layout_width="300dp"
                  android:layout_height="60dp"
                  android:background="@drawable/edittext_shape"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="20dp"
                  android:hint="请输入logo"
                  android:textSize="20dp"/>
        <ImageView android:layout_below="@+id/head_pic"
                   android:layout_height="300dp"
                   android:layout_width="300dp"
                   android:layout_centerHorizontal="true"
                   android:id="@+id/headpic"/>
        <Button android:id="@+id/btn_choose_headpic"
                android:text="选择图片"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/headpic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>


        <Button android:id="@+id/btn_submit"
                android:layout_below="@+id/btn_choose_headpic"
                android:layout_height="60dp"
                android:layout_width="300dp"
                android:layout_centerHorizontal="true"
                android:text="提交"
                android:textSize="20dp"/>

    </RelativeLayout>
</ScrollView>