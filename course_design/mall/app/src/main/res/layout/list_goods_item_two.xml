<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:background="#ffffff"
                android:padding="5dp">
    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/list_goods_two_img"
        android:layout_width="150dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
        android:layout_height="150dp"
        android:src="@drawable/iphone11_2">
    </com.facebook.drawee.view.SimpleDraweeView>
    <TextView android:id="@+id/list_goods_two_title"
        android:layout_below="@+id/list_goods_two_img"
        android:layout_width="wrap_content"
              android:lines="2"
              android:layout_marginTop="10dp"
              android:ellipsize="end"
              android:textColor="#333333"

              android:layout_height="wrap_content"
        android:text="顺丰包邮 128G内存学生价大屏双卡双待手机"/>
    <TextView android:id="@+id/list_goods_two_price"
              android:layout_marginTop="10dp"
              android:layout_below="@+id/list_goods_two_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#ff0000"
              android:textSize="20dp"

              android:text="￥50.00"

    />


</RelativeLayout>