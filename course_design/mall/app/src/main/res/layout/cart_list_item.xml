<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="160dp">
    <CheckBox
            android:id="@+id/cart_check_box"
            android:layout_width="30dp"

            android:layout_height="30dp"
            android:clickable="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            style="@style/MyCheckBox"

            android:visibility="visible"/>

    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/cart_iv_img"
            android:layout_width="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/cart_check_box"
            android:layout_centerVertical="true"
            android:layout_height="100dp"
            android:src="@drawable/shouji">
    </com.facebook.drawee.view.SimpleDraweeView>


    <TextView android:textAllCaps="false"
              android:id="@+id/cart_iv_title"
              android:layout_toRightOf="@+id/cart_iv_img"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_marginTop="20dp"
              android:textSize="15dp"
              android:lines="2"
              android:ellipsize="end"
              android:text="顺丰包邮 128G内存学生价大屏双卡双待手机"
              android:layout_width="250dp"
              android:layout_height="50dp"/>
    <TextView android:textAllCaps="false"
              android:id="@+id/cart_iv_price"
              android:layout_toRightOf="@+id/cart_iv_img"
              android:layout_below="@+id/cart_iv_title"
              android:textSize="20dp"

              android:layout_marginLeft="7dp"
              android:textColor="#ff0000"

              android:text="￥50.00"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>



</RelativeLayout>